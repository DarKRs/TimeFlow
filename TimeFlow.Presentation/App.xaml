<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TimeFlow.Presentation"
             xmlns:utils="clr-namespace:TimeFlow.Presentation.Utils"
             x:Class="TimeFlow.Presentation.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utils:CategoryToBackgroundColorConverter x:Key="CategoryToBackgroundColorConverter" />
            <utils:CategoryToHumanReadableConverter x:Key="CategoryToHumanReadableConverter" />
            <utils:BlockTypeToBackgroundColorConverter x:Key="BlockTypeToBackgroundColorConverter" />
            <utils:BoolToColorConverter x:Key="BoolToColorConverter" />
            <utils:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />
            <utils:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeFlow.Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TimeFlow.Presentation.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TimeFlow.Presentation">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Pomodoro"
            ContentTemplate="{DataTemplate views:PomodoroPage}"
            Route="PomodoroPage" />
        <ShellContent 
            Title="Задачи"
            ContentTemplate="{DataTemplate views:EisenhowerMatrixPage}"
            Route="EisenhowerMatrixPage"/>
        <ShellContent 
            Title="Планирование" 
            ContentTemplate="{DataTemplate views:TimeBlockingPage}" 
            Route="TimeBlockingPage"/>
        <ShellContent Route="AddTimeBlockPage" ContentTemplate="{DataTemplate views:AddTimeBlockPage}" />
        <ShellContent Route="EditTimeBlockPage" ContentTemplate="{DataTemplate views:EditTimeBlockPage}" />
    </TabBar>

</Shell>

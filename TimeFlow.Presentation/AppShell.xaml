<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeFlow.Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeFlow.Presentation.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TimeFlow.Presentation">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Pomodoro"
            ContentTemplate="{DataTemplate local:PomodoroPage}"
            Route="PomodoroPage" />
    </TabBar>

</Shell>

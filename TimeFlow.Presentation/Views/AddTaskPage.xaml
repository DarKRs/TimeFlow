<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TimeFlow.Presentation.ViewModels"
             x:Class="TimeFlow.Presentation.Views.AddTaskPage"
             Title="Добавить Задачу">

    <StackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Название" Text="{Binding Title}" />
        <Editor Placeholder="Описание" HeightRequest="100" Text="{Binding Description}" />

        <DatePicker Date="{Binding ScheduledDate}" />
        
        <Switch IsToggled="{Binding IsImportant}" />
        <Label Text="Важная" />

        <Switch IsToggled="{Binding IsUrgent}" />
        <Label Text="Срочная" />

        <Button Text="Сохранить" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>
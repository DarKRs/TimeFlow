<?xml version="1.0" encoding="UTF-8" ?>
<toolkit:Popup
    x:Class="TimeFlow.Presentation.Views.Popups.AddHabitPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White"
        HeightRequest="400"
        WidthRequest="300">
        <Label
            FontSize="20"
            HorizontalOptions="Center"
            Text="Добавить новую привычку" />
        <Entry Placeholder="Название привычки" Text="{Binding HabitName}" />
        <Editor Placeholder="Описание привычки" Text="{Binding HabitDescription}" />
        <Button Command="{Binding SaveHabitCommand}" Text="Сохранить" />
        <Button Command="{Binding ClosePopupCommand}" Text="Отмена" />
    </VerticalStackLayout>
</toolkit:Popup>
